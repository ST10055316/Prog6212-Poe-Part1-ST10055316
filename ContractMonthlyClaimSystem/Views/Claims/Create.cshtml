@model ContractMonthlyClaimSystem.Models.ViewModels.SubmitClaimViewModel
@{
    ViewData["Title"] = "Submit New Claim";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="fas fa-plus-circle me-2"></i>Submit New Claim</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="HoursWorked" class="form-label">Hours Worked</label>
                                <input asp-for="HoursWorked" class="form-control" placeholder="0.00" step="0.01" />
                                <span asp-validation-for="HoursWorked" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="HourlyRate" class="form-label">Hourly Rate</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="HourlyRate" class="form-control" placeholder="0.00" step="0.01" />
                                </div>
                                <span asp-validation-for="HourlyRate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ClaimPeriod" class="form-label">Claim Period</label>
                        <input asp-for="ClaimPeriod" class="form-control" type="date" />
                        <span asp-validation-for="ClaimPeriod" class="text-danger"></span>
                        <div class="form-text">Select the month/year this claim is for</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4"
                                  placeholder="Describe the work performed, courses taught, etc."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Index", "Claims")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to Claims
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-paper-plane me-1"></i>Submit Claim
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-calculator me-2"></i>Calculation</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Hours:</label>
                    <div id="calc-hours" class="fw-bold">0.00</div>
                </div>
                <div class="mb-3">
                    <label class="form-label">Rate:</label>
                    <div id="calc-rate" class="fw-bold">$0.00</div>
                </div>
                <hr>
                <div class="mb-3">
                    <label class="form-label">Total Amount:</label>
                    <div id="calc-total" class="fw-bold text-success h4">$0.00</div>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5><i class="fas fa-info-circle me-2"></i>Guidelines</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li><i class="fas fa-check text-success me-2"></i>Maximum 744 hours per month</li>
                    <li><i class="fas fa-check text-success me-2"></i>Provide detailed description</li>
                    <li><i class="fas fa-check text-success me-2"></i>Claims require approval from both Programme Coordinator and Academic Manager</li>
                    <li><i class="fas fa-check text-success me-2"></i>Claims cannot be edited once submitted</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            function updateCalculation() {
                var hours = parseFloat($('#HoursWorked').val()) || 0;
                var rate = parseFloat($('#HourlyRate').val()) || 0;
                var total = hours * rate;

                $('#calc-hours').text(hours.toFixed(2));
                $('#calc-rate').text('$' + rate.toFixed(2));
                $('#calc-total').text('$' + total.toFixed(2));
            }

            $('#HoursWorked, #HourlyRate').on('input', updateCalculation);
            updateCalculation();
        });
    </script>
}