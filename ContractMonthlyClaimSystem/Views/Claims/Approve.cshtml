@model ContractMonthlyClaimSystem.Models.ViewModels.ApproveRejectViewModel
@{
    ViewData["Title"] = "Approve Claim";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h4><i class="fas fa-check-circle me-2"></i>Approve Claim #@Model.ClaimId</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <h6><i class="fas fa-info-circle me-2"></i>Claim Summary</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Lecturer:</strong> @Model.Claim.LecturerName<br>
                            <strong>Hours:</strong> @Model.Claim.HoursWorked.ToString("F2")<br>
                            <strong>Rate:</strong> @Model.Claim.HourlyRate.ToString("C")
                        </div>
                        <div class="col-md-6">
                            <strong>Total Amount:</strong> <span class="text-success">@Model.Claim.TotalAmount.ToString("C")</span><br>
                            <strong>Period:</strong> @Model.Claim.ClaimPeriod.ToString("MMMM yyyy")<br>
                            <strong>Status:</strong> @Model.Claim.Status
                        </div>
                    </div>
                </div>

                <form asp-action="Approve" method="post">
                    <input type="hidden" asp-for="ClaimId" />
                    <input type="hidden" asp-for="Action" value="Approve" />

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Comments" class="form-label">Approval Comments (Optional)</label>
                        <textarea asp-for="Comments" class="form-control" rows="4"
                                  placeholder="Add any comments about this approval..."></textarea>
                        <span asp-validation-for="Comments" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("Details", new { id = Model.ClaimId })" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to Details
                        </a>
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-check me-1"></i>Approve Claim
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-exclamation-triangle me-2"></i>Important</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <small>
                        <i class="fas fa-info-circle me-1"></i>
                        By approving this claim, you are confirming that:
                    </small>
                    <ul class="mb-0 mt-2 small">
                        <li>The hours worked are accurate</li>
                        <li>The work was performed satisfactorily</li>
                        <li>All supporting documentation is valid</li>
                    </ul>
                </div>

                @if (!string.IsNullOrEmpty(Model.Claim.Description))
                {
                    <h6>Work Description:</h6>
                    <p class="small">@Model.Claim.Description</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}